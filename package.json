{
	"name": "thoth",
	"private": true,
	"version": "3.0.1",
	"description": "the bot for all things ELA",
	"workspaces": [
		"services/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"lint": "eslint services --ext .ts",
		"lint:fix": "eslint services --fix --ext .ts --debug"
	},
	"author": "Carter Himmel <me@fyko.net>",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-angular": "^17.1.0",
		"@types/common-tags": "^1.8.1",
		"@types/node": "^16",
		"eslint": "^8.25.0",
		"eslint-config-neon": "^0.1.38",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"turbo": "^1.8.3",
		"typescript": "^4.8.4"
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "all",
		"endOfLine": "lf"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			]
		}
	},
	"volta": {
		"node": "18.12.1",
		"yarn": "3.2.4"
	},
	"packageManager": "yarn@3.2.4"
}
