{
  "extends": "tsconfig/base.json",
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "outDir": "dist",
    "paths": {
      "#util/*": ["src/util/*"],
      "#mw/*": ["src/util/mw/*"],
      "#mw": ["src/util/mw/index.ts"],
      "#structures": ["src/structures/index.ts"],
      "#constants": ["src/util/constants.ts"],
      "#logger": ["src/util/logger.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
