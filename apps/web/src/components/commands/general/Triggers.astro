---
import TriggersCommand from '@thoth/interactions/commands/general/triggers';
import { t } from 'i18next';
import Command from '../Command.tsx';

const WORDS = [
  'pandemic',
  'swine',
  'influenza',
  'avian',
  'epidemic',
  'vaccine',
  'subtype',
  'antiviral',
  'virus',
  'viruses',
  'cdc',
  'vaccination',
  'strains',
  'strain',
  'cough',
  'pneumonia',
  'outbreak',
  'pigs',
  'quarantine',
  'infected',
  'mirza',
  'scare',
  'symptoms',
  'poultry',
  'infectious',
  '55 more...',
];
---

<Command
  name={TriggersCommand.name}
  description={TriggersCommand.description}
  args={Object.values(TriggersCommand.options)}
>
  {
    t('commands.triggers.success', {
      found_count: 80,
      word: 'flu',
      words: WORDS.join(', '),
    }).replaceAll('`', '')
  }
</Command>
